<sect3 status="final" id="grain">

  <title>Grain</title>

  <indexterm>
    <primary>modules</primary>
    <secondary>grain</secondary>
  </indexterm>

  <indexterm>
    <primary>grain</primary>
  </indexterm>

  <sect4>

    <title>Overview</title>

    <informaltable frame="none">
      <tgroup cols="2" colsep="0" rowsep="0">
        <colspec colwidth="6*"/>
        <colspec colwidth="4*"/>
        <tbody>
          <row>
            <entry>
              This module is an artistic feature which simulates the grain of a film.
            </entry>
            <entry>
              <graphic fileref="darkroom/modules/images/grain.png" scalefit="1" width="80%" align="center" />
            </entry>
          </row>
        </tbody>
      </tgroup>
    </informaltable>

  </sect4>

  <sect4>

    <title>Usage</title>

    <para>
      The grain is processed on the L channel from CIELAB.
    </para>

    <sect5>
      <title>coarseness</title>
      <para>
        Set the grain size, which has been scaled to simulate an ISO number.
      </para>
    </sect5>

    <sect5>
      <title>strength</title>
      <para>
        Set the strength of the effect.
      </para>
    </sect5>

  </sect4>

</sect3>
