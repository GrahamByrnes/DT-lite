<sect2 status="final" id="live_view">

  <title>Live view</title>

  <indexterm>
    <primary>tethering view</primary>
    <secondary>live view</secondary>
  </indexterm>

  <para>
    <informaltable frame="none">
      <tgroup cols="2" colsep="0" rowsep="0">
        <colspec colwidth="6*"/>
        <colspec colwidth="4*"/>
        <tbody>
          <row>
            <entry>
              <para>
                This panel gives you control of your camera's live view mode. Functionality such
                as focus setting, rotation, adding guides and overlays are supported.
              </para>
            </entry>
            <entry>
              <graphic fileref="tethering/images/panel_liveview.png" scalefit="1" width="80%" align="center" />
            </entry>
          </row>
        </tbody>
      </tgroup>
    </informaltable>
  </para>

</sect2>
